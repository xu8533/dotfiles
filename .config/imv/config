# Default config for imv

[options]

# Suppress built-in key bindings, and specify them explicitly in this
# config file.
suppress_default_binds = true

[aliases]
# Define aliases here. Any arguments passed to an alias are appended to the
# command.
# alias = command to run

[binds]
# Define some key bindings
q = quit
y = exec echo working!
p = exec echo $imv_current_file

# 图片浏览定位
<Left> = prev
<bracketleft> = prev
<Ctrl+p> = prev
<Right> = next
<bracketright> = next
<Ctrl+n> = next
gg = goto 1
<Shift+G> = goto -1

# 图片平移
j = pan 0 10
k = pan 0 -10
h = pan -10 0
l = pan 10 0

<Ctrl+j> = pan 0 50
<Ctrl+k> = pan 0 -50
<Ctrl+h> = pan -50 0
<Ctrl+l> = pan 50 0

# 图片缩放
<Up> = zoom 1
<Shift+plus> = zoom 1
<Down> = zoom -1
<minus> = zoom -1

# 图片旋转
<Ctrl+r> = rotate by 90
<Ctrl+e> = rotate by 10
<Ctrl+u> = rotate by -90
<Ctrl+i> = rotate by -10

# 垂直，水平翻转
v = flip vertical
<backslash> = flip horizontal
<slash> = flip horizontal

# Other commands
x = close
f = fullscreen
d = overlay
c = center
s = scaling next
<Shift+S> = upscaling next
a = zoom actual
0 = zoom actual
r = reset

# Gif playback
<period> = next_frame
<space> = toggle_playing

# 幻灯片播放
t = slideshow +1
<Shift+T> = slideshow -1
